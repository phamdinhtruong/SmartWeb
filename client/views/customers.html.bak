<div class="panel panel-default" ng-init="getCustomers()">
  <div class="panel-heading">
    <h3 class="panel-title">Latest Customers</h3>
  </div>
  <div class="panel-body">
    <div class="row">
    	<div ng-repeat="Customer in Customers">
    		<div class="col-md-6">
    			<div class="col-md-6">
    				<h4>{{Customer.name}}</h4>
    				<p>{{Customer.description}}</p>
    				<a class="btn btn-primary" href="#/Customers/details/{{Customer._id}}">View Details</a>
    			</div>
    			<div class="col-md-6">
    				<img class="thumbnail" src="{{Customer.avatar_url}}">
    			</div>
    		</div>
    	</div>
    </div>
  </div>
</div>